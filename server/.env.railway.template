# Railway Environment Variables Template
# Copy these to your Railway project settings

# Required for production
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production

# Database (Railway will set this automatically if you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Optional - Your microservices URLs
backend_url=https://your-backend-service.railway.app
sentiment_analyzer_url=https://your-sentiment-service.railway.app

# Optional - Logging level
DJANGO_LOG_LEVEL=INFO

# Optional - Additional Django settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
